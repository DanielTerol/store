<%= form_with model: product do |form| %>
    <div>
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>

    <div>
        <%= form.label :description, style: "display: block; width: 250px" %>
        <%= form.rich_text_area :description %>
    </div>
    
    <div>
        <%= form.submit %>
    </div>
<% end %>